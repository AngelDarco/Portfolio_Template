---
import Card from "./Card.astro";
const cards = [
  { title: "Login", body: "Login to your account", img: "/kit.jpg" },
  { title: "Register", body: "Register to your account", img: "/ligth.webp" },
  { title: "Cart", body: "View your cart", img: "/sticker.webp" },
  { title: "Orders", body: "View your orders", img: "tools.webp" },
];
---

<h1 class="p-4 text-2xl font-bold text-white">Categories</h1>
<main
  class="no-scrollbar h-62 mb-14 flex w-full items-center justify-center gap-5 overflow-x-scroll"
>
  {
    cards.map((card) => (
      <Card
        img={card.img}
        title={card.title}
        body={card.body}
        width="w-64 min-w-40"
        heigth="h-28"
      />
    ))
  }
</main>

<style>
  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }
  .no-scrollbar {
    scrollbar-width: none;
  }
</style>
